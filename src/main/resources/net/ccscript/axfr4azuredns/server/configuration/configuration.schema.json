{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "axfr4azuredns configuration file format",
  "properties": {
    "servers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type" : "object",
        "properties": {
        "listen_on": {
          "type": "string"
          },
          "tcp_port": {
            "type": "number",
            "minimum": 1,
            "maximum": 65535,
            "default": 53
          },
          "udp_port": {
            "type": "number",
            "minimum": 1,
            "maximum": 65535
          }
        },
        "required": [
        "listen_on"
        ]
      }
    },
    "zones": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "zone_name": {
            "type": "string"
          },
          "master": {
            "type": "string",
            "enum": ["dns", "azure"],
            "default": "dns"
          },
          "dns": {
            "type": "object",
            "properties": {
              "servers": {
                "type": "array",
                "minItems": 1,
                "prefixItems": [
                  {
                    "type": "string"
                  }
                ]
              },
              "zone_transfer": {
                "type": "string",
                "enum": ["ixfr","axfr"],
                "default": "ixfr"
              },
              "polling_interval": {
                "type": "number",
                "minimum": 1,
                "maximum": 60,
                "default": 5
              }
            },
            "required": [
            	"servers"
            ]
          },
          "azure": {
            "type": "object",
              "properties": {
              	"zone_name": {
                  "type": "string"
                },
                "resourcegroup": {
                  "type": "string"
                },
                "subscription": {
                  "type": "string"
                },
                "service_principal": {
                  "type": "string"
                }
              },
              "required": [
                "zone_name",
                "resourcegroup",
                "subscription",
                "service_principal"
              ]
          }
        },
        "required": [
          "zone_name",
          "dns",
          "azure"
        ]
      }
    },
    "azure_credentials": {
      "type": "array",
      "minItems": 1,
      "items": {
      	"type": "object",
        "properties": {
          "tenant": {
            "type": "string"
          },
          "service_principal": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "tenant", "service_principal", "password"
        ]
      }
    }
  },
  "required": [
  	"servers",
    "zones",
    "azure_credentials"
  ]
}